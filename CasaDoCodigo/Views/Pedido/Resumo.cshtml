@{
    ViewData["Title"] = "Resumo";
}
@model Pedido


<h3>Resumo do Pedido</h3>


<div class="card">
    

    <div class="card-body">
        <div class="row"><h2>
            <div class="col-md-12"> 
                Numero do pedido: @Model.Id
            </div>
        </h2></div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h4>Seus Dados</h4>
                <div>@Model.Nome</div>
                <div>@Model.Telefone</div>
            </div>
            <div class="col-md-3">
                <h4>E-mail</h4>
                @Model.Email
            </div>
            <div class="col-md-6">
                <h4>@Model.Endereco</h4>
                <div>@Model.Municipio - @Model.Estado</div>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3> 
            </div>
        </div>

        @foreach (var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-10">
                    <div>@item.Produto.Nome</div>
                </div>
                <div class="col-md-2">
                    <div class="float-end">@item.Quantidade</div>
                </div>
            </div>
        }

        

    </div>
    
</div>
<div>


    
</div>