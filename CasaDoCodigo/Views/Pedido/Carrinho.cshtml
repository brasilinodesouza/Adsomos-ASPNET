@{
    ViewData["Title"] = "Carrinho";
}
@using CasaDoCodigo.Models;
@model List<ItemPedido>


<h3>Meu Carrinho</h3>


<div class="card">
    <div class="card-header">
        
        <div class="row">
            <div class="col-md-6">ITEM</div>
            <div class="col-md-2">Preço Unitário</div>
            <div class="col-md-2">Quantidade</div>
            <div class="col-md-2"><span class="float-end">Subtotal</span></div>
        </div>
    </div>
    <div class="card-body">

        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3"><img src="~/imagens/produtos/small_@(item.Id).jpg" /></div>
                <div class="col-md-3">@item.Produto.Nome</div>
                <div class="col-md-2">R$: @(item.PrecoUnitario)</div>
                <div class="col-md-2">@item.Quantidade</div>
                <div class="col-md-2"><span class="float-end">R$: @item.Subtotal</span></div>
            </div>          
        }




    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-md-10">Total 4 itens</div>
            <div class="col-md-2"><span class="float-end">Preço total R$: 210,00</span></div>
        </div>
    </div>
 </div>


<div class="row">
    <div class="col-md-12">
        <a asp-action="resumo" 
            class="btn btn-success float-end">
            Finalizar pedido
        </a>


       @*  @Html.ActionLink("Finalizar pedido", "resumo",null,
        "pedido", new { @class ="btn btn-success float-end"}) *@
    </div>
</div>