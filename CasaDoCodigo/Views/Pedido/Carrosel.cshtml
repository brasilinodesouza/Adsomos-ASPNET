@{
    ViewData["Title"] = "Carrosel";
}

<h3> Catalago</h3>

<div id="carouselExampleIndicators" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">

        @{
            var produtos = new[]
            {
                new { Id = 1, Nome = "Sleep not found", Preco = 59.90 },
                new { Id = 2, Nome = "May the code be with you", Preco = 59.90 },
                new { Id = 3, Nome = "Rollback", Preco = 59.90 },
                new { Id = 4, Nome = "REST", Preco = 69.90},
                new { Id = 5, Nome = "Design", Preco = 69.90 },
                new { Id = 6, Nome = "Vire o jogo", Preco = 69.90 },
                new { Id = 7, Nome = "Test Driven", Preco = 79.90 },
                new { Id = 8, Nome = "IOS", Preco = 79.90},
                new { Id = 9, Nome = "ANDROID", Preco = 79.90},
                

            };

        }

        <div class="carousel-item active">
            <div class="row">

                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img src="~/imagens/produtos/large_@(produtos[i].Id).jpg" />
                            </div>
                            <div class="panel-footer">
                                <div>@(produtos[i].Nome)</div>
                                <div>R$ @(produtos[i].Preco.ToString("F"))</div>
                                <div class="text-center">
                                    <a asp-action="carrinho"> Adicionar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="carousel-item">
            <div class="row">

                @for (int i = 3; i < 6; i++)
                {
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img src="~/imagens/produtos/large_@(produtos[i].Id).jpg" />
                            </div>
                            <div class="panel-footer">
                                <div>@(produtos[i].Nome)</div>
                                <div>R$ @(produtos[i].Preco.ToString("F"))</div>
                                <div class="text-center">
                                    <a asp-action="carrinho"> Adicionar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="carousel-item">
                <div class="row">

                    @for (int i = 6; i < 9; i++)
                    {
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                <img src="~/imagens/produtos/large_@(produtos[i].Id).jpg" />
                                </div>
                                <div class="panel-footer">
                                    <div>@(produtos[i].Nome)</div>
                                    <div>R$ @(produtos[i].Preco.ToString("F"))</div>
                                    <div class="text-center">
                                        <a asp-action="carrinho"> Adicionar </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>